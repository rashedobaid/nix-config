{
  "$schema" : "https://schema.linearmouse.app/0.10.0",
  "schemes" : [
    {
      "if" : {
        "device" : {
          "category" : "mouse",
          "productName" : "USB OPTICAL MOUSE",
          "productID" : "0x8105",
          "vendorID" : "0x10c4"
        }
      },
      "scrolling" : {
        "acceleration" : {
          "vertical" : 1
        },
        "speed" : {
          "vertical" : 0
        },
        "distance" : {
          "vertical" : 4
        },
        "reverse" : {
          "vertical" : true
        }
      },
      "pointer" : {
        "acceleration" : 1,
        "disableAcceleration" : true
      },
      "buttons" : {
        "universalBackForward" : true
      }
    },
    {
      "if" : {
        "device" : {
          "category" : "mouse",
          "productName" : "USB Mouse",
          "productID" : "0x8736",
          "vendorID" : "0x9da"
        }
      },
      "scrolling" : {
        "reverse" : {
          "vertical" : true
        }
      }
    }
  ]
}